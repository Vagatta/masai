                </nav>
              </div>
              
              <!-- Botón CTA principal -->
              <a href="#reserva-section" class="hidden md:inline-flex items-center gap-2 bg-gradient-to-r from-[#ec6d13] to-[#d45e0a] text-white px-5 py-2.5 rounded-full transition-all duration-300 hover:shadow-lg transform hover:scale-105 group relative overflow-hidden border border-[#ec6d13]/30">
