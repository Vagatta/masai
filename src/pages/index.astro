        <!-- Sección Somos -->
        <section id="somos-section" class="relative flex flex-col md:flex-row items-center justify-between bg-[#ec6d13] py-24 px-6 md:px-20 border-b-4 border-[#221811] overflow-hidden">
          <!-- Elementos decorativos flotantes -->
