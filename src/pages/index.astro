                <img src="/img/patterns/tribal-pattern-2.svg" alt="" aria-hidden="true" class="w-full h-full">
              </div>
              
              <div class="flex justify-center gap-2 md:gap-3 mb-6 px-4 relative">
                <button 
                  id="filter-all" 
                  class="px-4 py-2 rounded-full bg-[#ec6d13] text-white font-medium text-sm transition-all duration-500 hover:shadow-lg hover:scale-110 relative overflow-hidden"
                  data-filter="all"
                  data-aos="fade-right"
                  data-aos-delay="500"
                >
                  <!-- Micropatrón en el botón activo -->
                  <span class="absolute inset-0 opacity-10">
                    <img src="/img/patterns/tribal-pattern-3.svg" alt="" aria-hidden="true" class="w-full h-full object-cover">
                  </span>
                  <span class="relative z-10">Todos</span>
                </button>
                <button 
                  id="filter-cocktails" 
                  class="px-4 py-2 rounded-full bg-[#483323] text-white font-medium text-sm transition-all duration-500 hover:bg-[#5a4231] hover:shadow-lg hover:scale-110 relative overflow-hidden"
                  data-filter="cocktail"
                  data-aos="fade-right"
                  data-aos-delay="600"
                >
                  <span class="relative z-10">Cócteles</span>
                </button>
                <button 
                  id="filter-coffee" 
                  class="px-4 py-2 rounded-full bg-[#483323] text-white font-medium text-sm transition-all duration-500 hover:bg-[#5a4231] hover:shadow-lg hover:scale-110 relative overflow-hidden"
                  data-filter="coffee"
                  data-aos="fade-right"
                  data-aos-delay="700"
                >
                  <span class="relative z-10">Cafés</span>
                </button>
                <button 
                  id="filter-desserts" 
                  class="px-4 py-2 rounded-full bg-[#483323] text-white font-medium text-sm transition-all duration-500 hover:bg-[#5a4231] hover:shadow-lg hover:scale-110 relative overflow-hidden"
                  data-filter="dessert"
                  data-aos="fade-right"
                  data-aos-delay="800"
                >
                  <span class="relative z-10">Postres</span>
                </button>
              </div>
            </div>
            
            <!-- Carrusel con microinteracciones -->
            <div class="relative max-w-md mx-auto p-4 overflow-hidden transform transition-all" data-aos="fade-up" data-aos-delay="900">
              <!-- Patrón tribal esquina superior derecha del carrusel -->
              <div class="absolute -top-2 right-0 w-16 h-16 opacity-30 transform rotate-45 transition-transform duration-700 hover:rotate-90">
                <img src="/img/patterns/tribal-pattern-1.svg" alt="" aria-hidden="true" class="w-full h-full">  
              </div>
              
              <!-- Patrón tribal esquina inferior izquierda del carrusel -->
              <div class="absolute -bottom-2 left-0 w-16 h-16 opacity-30 transform -rotate-12 transition-transform duration-700 hover:-rotate-45">
                <img src="/img/patterns/tribal-pattern-2.svg" alt="" aria-hidden="true" class="w-full h-full">  
              </div>
              
              <!-- Contenedor con ancho máximo y centrado -->
              <div class="relative overflow-hidden rounded-lg border border-[#483323]/30 shadow-lg shadow-[#ec6d13]/10 hover:shadow-[#ec6d13]/30 transition-all duration-700">
                <!-- Contenedor de slides que mostrará solo uno a la vez -->
                <div id="menu-carousel" class="flex transition-transform duration-500 ease-in-out">
                  <!-- 1: Mojito -->
                  <div class="w-full min-w-full flex-shrink-0" data-category="cocktail">
                    <div class="flex flex-col gap-3 pb-3 h-full">
                      <div
                        class="w-full h-52 bg-center bg-no-repeat bg-cover rounded-lg shadow-lg"
