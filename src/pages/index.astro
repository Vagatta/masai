          <div class="absolute inset-0 bg-black/50 z-10"></div>
          
          <!-- Imagen de fondo (se cambiará por video cuando tengas uno disponible) -->
          <div 
            class="absolute inset-0 w-full h-full bg-cover bg-center"
            style="background-image: linear-gradient(rgba(0, 0, 0, 0.3) 0%, rgba(0, 0, 0, 0.5) 100%), url('https://cdn.usegalileo.ai/sdxl10/aaffade9-da81-4b73-96d4-5d0ebf5a099d.png');"
