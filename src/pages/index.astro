              // Script del carrusel con filtros interactivos y autoavance
              window.addEventListener('load', function() {
                // Elementos principales
                const carousel = document.getElementById('menu-carousel');
                const prevBtn = document.getElementById('carousel-prev');
                const nextBtn = document.getElementById('carousel-next');
                const allSlides = document.querySelectorAll('#menu-carousel > div');
                const filterButtons = document.querySelectorAll('[data-filter]');
                
                // Verificar que todos los elementos existan
                if (!carousel || !prevBtn || !nextBtn || allSlides.length === 0) {
                  console.error('Elementos del carrusel no encontrados');
                  return;
                }
                
                // Variables de control
                let currentSlide = 0;
                let isAnimating = false;
                let autoplayInterval;
                let activeFilter = 'all';
                let visibleSlides = [...allSlides]; // Inicialmente todos son visibles
                let indicators = [];
                
                // Crear indicadores dinámicamente basados en los slides visibles
                function createIndicators() {
                  // Eliminar indicadores anteriores
                  const indicatorContainer = document.querySelector('.flex.justify-center.mt-4');
                  indicatorContainer.innerHTML = '';
                  
                  // Crear nuevos indicadores basados en slides visibles
                  visibleSlides.forEach((_, i) => {
                    const indicator = document.createElement('span');
                    indicator.classList.add('h-2', 'w-2', 'mx-1', 'rounded-full', 'cursor-pointer');
                    indicator.classList.add(i === currentSlide ? 'bg-[#ec6d13]' : 'bg-[#483323]');
                    
                    // Añadir evento de clic
                    indicator.addEventListener('click', () => {
                      if (isAnimating) return;
                      isAnimating = true;
                      
                      stopAutoplay();
                      currentSlide = i;
                      updateCarousel();
                      startAutoplay();
                      
                      setTimeout(() => {
                        isAnimating = false;
                      }, 500);
                    });
                    
                    indicatorContainer.appendChild(indicator);
                  });
                  
                  // Actualizar referencia a los indicadores
                  indicators = document.querySelectorAll('.flex.justify-center.mt-4 span');
                }
                
                // Función para filtrar elementos
                function filterSlides(category) {
                  stopAutoplay(); // Detener autoavance al cambiar filtros
                  
                  // Actualizar estado de los botones
                  filterButtons.forEach(btn => {
                    const hasPattern = btn.querySelector('.absolute.inset-0');
                    
                    if (btn.dataset.filter === category) {
                      btn.classList.remove('bg-[#483323]');
                      btn.classList.add('bg-[#ec6d13]');
                      
                      // Agregar patrón tribal al botón activo si no lo tiene
                      if (!hasPattern) {
                        const patternSpan = document.createElement('span');
                        patternSpan.className = 'absolute inset-0 opacity-10';
                        patternSpan.innerHTML = '<img src="/img/patterns/tribal-pattern-3.svg" alt="" aria-hidden="true" class="w-full h-full object-cover">';
                        btn.insertBefore(patternSpan, btn.firstChild);
                      }
                    } else {
                      btn.classList.remove('bg-[#ec6d13]');
                      btn.classList.add('bg-[#483323]');
                      
                      // Eliminar patrón tribal de botones inactivos
                      if (hasPattern) {
                        btn.removeChild(hasPattern);
                      }
                    }
                  });
                  
                  // Filtrar slides
                  if (category === 'all') {
                    visibleSlides = [...allSlides];
                    allSlides.forEach(slide => {
                      slide.classList.remove('hidden');
                    });
                  } else {
                    visibleSlides = [...allSlides].filter(slide => slide.dataset.category === category);
                    allSlides.forEach(slide => {
                      if (slide.dataset.category === category) {
                        slide.classList.remove('hidden');
                      } else {
                        slide.classList.add('hidden');
                      }
                    });
                  }
                  
                  // Reiniciar posición del carrusel
                  currentSlide = 0;
                  activeFilter = category;
                  
                  // Recrear indicadores
                  createIndicators();
                  
                  // Actualizar visualización
                  updateCarousel();
                  startAutoplay();
                }
                
                // Evento de clic para los botones de filtro
                filterButtons.forEach(btn => {
                  btn.addEventListener('click', () => {
                    const category = btn.dataset.filter;
                    if (category !== activeFilter) {
                      filterSlides(category);
                    }
                  });
                });
                
                // Función para actualizar la posición del carrusel
                function updateCarousel() {
                  // Si no hay slides visibles, no hacer nada
                  if (visibleSlides.length === 0) return;
                  
                  // Obtener índice relativo dentro de los slides visibles
                  const currentVisibleIndex = visibleSlides.indexOf(visibleSlides[currentSlide]);
                  
                  // Calcular posición basada en el índice original en el DOM
                  const currentDomIndex = Array.from(allSlides).indexOf(visibleSlides[currentSlide]);
                  carousel.style.transform = `translateX(-${currentDomIndex * 100}%)`;
                  
                  // Actualizar indicadores
                  indicators.forEach((dot, i) => {
                    if (i === currentSlide) {
                      dot.classList.remove('bg-[#483323]');
                      dot.classList.add('bg-[#ec6d13]');
                    } else {
                      dot.classList.remove('bg-[#ec6d13]');
                      dot.classList.add('bg-[#483323]');
                    }
                  });
                  
                  // Actualizar ARIA para accesibilidad
                  allSlides.forEach((slide, i) => {
                    if (visibleSlides.includes(slide) && Array.from(visibleSlides).indexOf(slide) === currentSlide) {
                      slide.setAttribute('aria-hidden', 'false');
                    } else {
                      slide.setAttribute('aria-hidden', 'true');
                    }
                  });
                }
                
                // Ir a la siguiente diapositiva
                function nextSlide() {
                  if (isAnimating || visibleSlides.length <= 1) return;
                  isAnimating = true;
                  
                  currentSlide = (currentSlide + 1) % visibleSlides.length;
                  updateCarousel();
                  
                  setTimeout(() => {
                    isAnimating = false;
                  }, 500); // Coincidir con la duración de la transición CSS
                }
                
                // Ir a la diapositiva anterior
                function prevSlide() {
                  if (isAnimating || visibleSlides.length <= 1) return;
                  isAnimating = true;
                  
                  currentSlide = (currentSlide - 1 + visibleSlides.length) % visibleSlides.length;
                  updateCarousel();
                  
                  setTimeout(() => {
                    isAnimating = false;
                  }, 500);
                }
                
                // Iniciar autoavance
                function startAutoplay() {
                  stopAutoplay(); // Evitar duplicados
                  if (visibleSlides.length > 1) {
                    autoplayInterval = setInterval(nextSlide, 5000); // Cambiar cada 5 segundos
                  }
                }
                
                // Detener autoavance
                function stopAutoplay() {
                  if (autoplayInterval) {
                    clearInterval(autoplayInterval);
                  }
                }
                
                // Manejadores de eventos para botones
                nextBtn.addEventListener('click', function(e) {
                  e.preventDefault();
                  stopAutoplay(); // Detener autoavance al interactuar
                  nextSlide();
                  startAutoplay(); // Reiniciar autoavance
                });
                
                prevBtn.addEventListener('click', function(e) {
                  e.preventDefault();
                  stopAutoplay(); // Detener autoavance al interactuar
                  prevSlide();
                  startAutoplay(); // Reiniciar autoavance
                });
                
                // Detener autoavance al pasar el mouse encima
                const carouselContainer = carousel.closest('.relative');
                carouselContainer.addEventListener('mouseenter', stopAutoplay);
                carouselContainer.addEventListener('mouseleave', startAutoplay);
                
                // Navegación con teclado
                document.addEventListener('keydown', function(e) {
                  if (e.key === 'ArrowRight') {
                    stopAutoplay();
                    nextSlide();
                    startAutoplay();
                  } else if (e.key === 'ArrowLeft') {
                    stopAutoplay();
                    prevSlide();
                    startAutoplay();
                  }
                });
                
                // Inicializar carrusel
                createIndicators();
                updateCarousel();
                startAutoplay();
                
                // Añadir atributos de accesibilidad
                carousel.setAttribute('aria-roledescription', 'carousel');
                carousel.setAttribute('aria-live', 'polite');
